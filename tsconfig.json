{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": "src",
        // Replace `astro/client` with `@astrojs/image/client`
        "types": ["@astrojs/image/client"],
        "paths": {
            "@assets/*": [
                "assets/*"
            ],
            "@config": [
                "config.ts"
            ],
            "@components/*": [
                "components/*"
            ],
            "@content/*": [
                "content/*"
            ],
            "@layouts/*": [
                "layouts/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        }
    }
}
