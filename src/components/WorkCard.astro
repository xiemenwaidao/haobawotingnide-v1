---
import type { Work } from "@assets/worksData";
import LinkButton from "./LinkButton.astro";
import { Image } from "@astrojs/image/components";

interface Props {
    work: Work;
}
const { work } = Astro.props;
---

<li>
    <!-- <a href={work.href} target="_blank">
        <img src={work.imgSrc} alt={work.title} />
        <h2>{work.title}</h2>
        <span>{work.date}</span>
        <p>{work.description}</p>
    </a> -->

    <div class="max-w-full sm:max-w-sm rounded-lg shadow h-full flex flex-col">
        <a href={work.href}>
            <Image
                src={work.imgSrc}
                alt={work.title}
                format="webp"
                width={640}
                height={350}
                class="rounded-t-lg"
            />
        </a>
        <div class="flex-grow flex flex-col p-5">
            <a href={work.href}>
                <h5
                    class="mb-2 text-2xl font-bold tracking-tight text-skin-accent hover:underline decoration-dashed"
                >
                    {work.title}
                </h5>
            </a>
            <p class="mb-5 font-normal grow">
                {work.description}
            </p>
            <LinkButton href={work.href} className={"w-fit"}>
                Read more
                <svg xmlns="http://www.w3.org/2000/svg"
                    ><path
                        d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                    ></path>
                </svg>
            </LinkButton>
        </div>
    </div>
</li>
